<resources>

    <style name="Collapsar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Collapsar.Dark" parent="Collapsar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>

        <item name="colorBackground">@color/colorPrimary_dark</item>
        <item name="colorTitle">@color/colorTitle_dark</item>
        <item name="colorSubtitle">@color/colorSubtitle_dark</item>
        <item name="colorContent">@color/colorContent_dark</item>
        <item name="colorDivider">@color/colorDivider_dark</item>
        <item name="placeholderColors">@array/placeholder_colors_dark</item>
    </style>

    <!-- recent images activity -->
    <style name="Collapsar.RecentImages.Dark" parent="Collapsar.Dark" />

    <style name="TextAppearance.RecentImages.TileTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.RecentImages.TileSubtitle" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:textColor">?attr/colorSubtitle</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- detail activity -->
    <style name="Collapsar.Detail.Dark" parent="Collapsar.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Detail.Title" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
        <item name="android:textColor">?attr/colorTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Detail.Subtitle" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorSubtitle</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Detail.ActionTitle" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Detail.TitleContent" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Detail.Content" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorContent</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


    <!-- toolbar -->
    <style name="CollapsarToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/colorContent</item>
        <item name="android:textColorSecondary">?attr/colorContent</item>
    </style>

    <!-- menu -->
    <style name="CollapsarPopupMenuTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="android:textColor">?attr/colorContent</item>
    </style>

</resources>